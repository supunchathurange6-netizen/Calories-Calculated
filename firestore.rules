
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user's UID matches the userId in the path.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if the user has an 'admin' custom claim.
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Rules for the 'users' collection.
    match /users/{userId} {
      // A user can create, update, or delete their own profile document.
      allow create, update, delete: if isOwner(userId);
      
      // Any signed-in user can read profiles for the admin dashboard.
      // In a production environment, you should restrict this to admins: `if isAdmin();`
      allow read: if isSignedIn(); // 'read' includes 'get' and 'list'

      // Rules for the 'foodEntries' subcollection.
      // A user can manage their own food log entries.
      match /foodEntries/{foodEntryId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
      
      // Rules for the 'customFoods' subcollection.
      // A user can manage their own custom food items.
      match /customFoods/{customFoodId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }

      // Rules for the 'weightHistory' subcollection.
      // A user can manage their own weight history.
      match /weightHistory/{weightEntryId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
    }

    // Rules for the 'safetySettings' collection.
    // Only users with an 'admin' custom claim can read or write safety settings.
    match /safetySettings/{settingsId} {
      allow read, write: if isAdmin();
    }
  }
}
